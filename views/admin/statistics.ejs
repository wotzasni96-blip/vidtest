<%- include('../layouts/admin', { title: 'Statistics - Admin Panel' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-chart-bar me-2"></i>Statistics</h1>
    <a href="/admin/dashboard" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>

<!-- User Actions Statistics -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>User Actions (Last 30 Days)
                </h5>
            </div>
            <div class="card-body">
                <% if (actionStats && actionStats.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Action Type</th>
                                    <th>Count</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                const totalActions = actionStats.reduce((sum, stat) => sum + parseInt(stat.count), 0);
                                actionStats.forEach(stat => { 
                                %>
                                    <tr>
                                        <td>
                                            <strong><%= stat.action_type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></strong>
                                        </td>
                                        <td><%= stat.count %></td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar" role="progressbar" 
                                                     style="width: <%= (stat.count / totalActions * 100).toFixed(1) %>%">
                                                    <%= (stat.count / totalActions * 100).toFixed(1) %>%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No user actions recorded</h5>
                        <p class="text-muted">User activity will appear here once users start browsing the site.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Daily Views Chart -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-calendar me-2"></i>Daily Views (Last 30 Days)
                </h5>
            </div>
            <div class="card-body">
                <% if (dailyViews && dailyViews.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Views</th>
                                    <th>Chart</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                const maxViews = Math.max(...dailyViews.map(v => parseInt(v.views)));
                                dailyViews.forEach(day => { 
                                %>
                                    <tr>
                                        <td><strong><%= new Date(day.date).toLocaleDateString() %></strong></td>
                                        <td><%= day.views %></td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-success" role="progressbar" 
                                                     style="width: <%= (day.views / maxViews * 100).toFixed(1) %>%">
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-eye fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No view data available</h5>
                        <p class="text-muted">Video views will appear here once users start watching videos.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

