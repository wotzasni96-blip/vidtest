<%- include('../layouts/main', { title: 'Home - VideoHub' }) %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Discover Amazing Videos</h1>
                <p class="lead mb-4">Explore our collection of high-quality videos from talented creators and models.</p>
                <a href="/videos" class="btn btn-light btn-lg">Browse Videos</a>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-6 mb-3">
                        <div class="stats-card text-center">
                            <h3 class="text-primary"><%= statistics.totalVideos %></h3>
                            <p class="mb-0">Total Videos</p>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="stats-card text-center">
                            <h3 class="text-success"><%= statistics.totalViews.toLocaleString() %></h3>
                            <p class="mb-0">Total Views</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- New Videos Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-star text-warning me-2"></i>New Videos</h2>
            <a href="/videos" class="btn btn-outline-primary">View All</a>
        </div>
        
        <div class="row">
            <% if (newVideos && newVideos.length > 0) { %>
                <% newVideos.forEach(video => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card video-card h-100">
                            <a href="/video/<%= video.id %>" class="text-decoration-none">
                                <img src="<%= video.thumbnail_url || '/images/default-thumbnail.jpg' %>" 
                                     class="card-img-top video-thumbnail" alt="<%= video.title %>">
                            </a>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <a href="/video/<%= video.id %>" class="text-decoration-none text-dark">
                                        <%= video.title %>
                                    </a>
                                </h6>
                                <% if (video.model_name) { %>
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-user me-1"></i>
                                        <a href="/model/<%= encodeURIComponent(video.model_name) %>" 
                                           class="text-decoration-none">
                                            <%= video.model_name %>
                                        </a>
                                    </p>
                                <% } %>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-eye me-1"></i><%= video.views %>
                                    </small>
                                    <small class="text-muted">
                                        <%= new Date(video.created_at).toLocaleDateString() %>
                                    </small>
                                </div>
                                <% if (video.tags && video.tags.length > 0) { %>
                                    <div class="mt-2">
                                        <% video.tags.slice(0, 3).forEach(tag => { %>
                                            <a href="/tag/<%= encodeURIComponent(tag) %>" 
                                               class="badge bg-secondary tag-badge text-decoration-none">
                                                <%= tag %>
                                            </a>
                                        <% }) %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-video fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No new videos yet</h4>
                        <p class="text-muted">Check back soon for fresh content!</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Most Viewed Section -->
