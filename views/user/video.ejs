<%- include('../layouts/main', { title: video.title + ' - VideoHub' }) %>

<div class="container py-5">
    <div class="row">
        <!-- Video Player -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-0">
                    <div class="ratio ratio-16x9">
                        <%- video.embed_code %>
                    </div>
                </div>
            </div>
            
            <!-- Video Info -->
            <div class="card mt-4">
                <div class="card-body">
                    <h1 class="card-title h3"><%= video.title %></h1>
                    
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <span class="text-muted me-3">
                                <i class="fas fa-eye me-1"></i><%= video.views %> views
                            </span>
                            <span class="text-muted">
                                <i class="fas fa-calendar me-1"></i><%= new Date(video.created_at).toLocaleDateString() %>
                            </span>
                        </div>
                    </div>
                    
                    <% if (video.model_name) { %>
                        <p class="mb-2">
                            <strong>Model:</strong> 
                            <a href="/model/<%= encodeURIComponent(video.model_name) %>" class="text-decoration-none">
                                <%= video.model_name %>
                            </a>
                        </p>
                    <% } %>
                    
                    <% if (video.description) { %>
                        <p class="card-text"><%= video.description %></p>
                    <% } %>
                    
                    <% if (video.tags && video.tags.length > 0) { %>
                        <div class="mt-3">
                            <strong>Tags:</strong>
                            <div class="mt-2">
                                <% video.tags.forEach(tag => { %>
                                    <a href="/tag/<%= encodeURIComponent(tag) %>" 
                                       class="badge bg-secondary tag-badge text-decoration-none">
                                        <%= tag %>
                                    </a>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Related Videos -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Related Videos</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <!-- This would be populated with related videos -->
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-video fa-2x mb-2"></i>
                            <p>Related videos will appear here</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Video Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary"><%= video.views %></h4>
                            <small class="text-muted">Views</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success"><%= video.tags ? video.tags.length : 0 %></h4>
                            <small class="text-muted">Tags</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
