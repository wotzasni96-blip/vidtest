<%- include('../layouts/main', { title: 'Videos - VideoHub' }) %>

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                <% if (typeof filterType !== 'undefined' && filterType === 'model') { %>
                    <i class="fas fa-user me-2"></i>Videos by <%= filterValue %>
                <% } else if (typeof filterType !== 'undefined' && filterType === 'tag') { %>
                    <i class="fas fa-tag me-2"></i>Videos tagged "<%= filterValue %>"
                <% } else { %>
                    <i class="fas fa-video me-2"></i>All Videos
                <% } %>
            </h1>
            <% if (typeof search !== 'undefined' && search) { %>
                <p class="text-muted">Search results for: "<%= search %>"</p>
            <% } %>
        </div>
        <div class="col-md-4">
            <!-- Sort Options -->
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-sort me-1"></i>Sort
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="?<%= new URLSearchParams({...req.query, sort: 'created_at', order: 'DESC'}) %>">Newest First</a></li>
                    <li><a class="dropdown-item" href="?<%= new URLSearchParams({...req.query, sort: 'created_at', order: 'ASC'}) %>">Oldest First</a></li>
                    <li><a class="dropdown-item" href="?<%= new URLSearchParams({...req.query, sort: 'views', order: 'DESC'}) %>">Most Viewed</a></li>
                    <li><a class="dropdown-item" href="?<%= new URLSearchParams({...req.query, sort: 'title', order: 'ASC'}) %>">Title A-Z</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Videos Grid -->
    <div class="row">
        <% if (videos && videos.length > 0) { %>
            <% videos.forEach(video => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card video-card h-100">
                        <a href="/video/<%= video.id %>" class="text-decoration-none">
                            <img src="<%= video.thumbnail_url || '/images/default-thumbnail.jpg' %>" 
                                 class="card-img-top video-thumbnail" alt="<%= video.title %>">
                        </a>
                        <div class="card-body">
                            <h6 class="card-title">
                                <a href="/video/<%= video.id %>" class="text-decoration-none text-dark">
                                    <%= video.title %>
                                </a>
                            </h6>
                            <% if (video.model_name) { %>
                                <p class="text-muted small mb-2">
                                    <i class="fas fa-user me-1"></i>
                                    <a href="/model/<%= encodeURIComponent(video.model_name) %>" 
                                       class="text-decoration-none">
                                        <%= video.model_name %>
                                    </a>
                                </p>
                            <% } %>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-eye me-1"></i><%= video.views %>
                                </small>
                                <small class="text-muted">
                                    <%= new Date(video.created_at).toLocaleDateString() %>
                                </small>
                            </div>
                            <% if (video.tags && video.tags.length > 0) { %>
                                <div class="mt-2">
                                    <% video.tags.slice(0, 3).forEach(tag => { %>
                                        <a href="/tag/<%= encodeURIComponent(tag) %>" 
                                           class="badge bg-secondary tag-badge text-decoration-none">
                                            <%= tag %>
                                        </a>
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No videos found</h4>
                    <p class="text-muted">
                        <% if (typeof search !== 'undefined' && search) { %>
                            Try adjusting your search terms or browse all videos.
                        <% } else { %>
                            No videos are available at the moment.
                        <% } %>
                    </p>
                    <a href="/videos" class="btn btn-primary">Browse All Videos</a>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <nav aria-label="Video pagination" class="mt-5">
            <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?<%= new URLSearchParams({...req.query, page: currentPage - 1}) %>">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>
                <% } %>
                
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?<%= new URLSearchParams({...req.query, page: i}) %>"><%= i %></a>
                    </li>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?<%= new URLSearchParams({...req.query, page: currentPage + 1}) %>">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>
